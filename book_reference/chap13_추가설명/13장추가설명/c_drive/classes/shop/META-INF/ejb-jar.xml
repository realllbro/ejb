<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ejb-jar PUBLIC "-//Sun Microsystems, Inc.//DTD Enterprise JavaBeans 2.0//EN" "http://java.sun.com/dtd/ejb-jar_2_0.dtd">
<ejb-jar>
    <enterprise-beans>
        <session>
            <display-name>UserManager</display-name>
            <ejb-name>UserManager</ejb-name>
            <home>kr.co.hanbitbook.ejb.examples.shop.UserManagerHome</home>
            <remote>kr.co.hanbitbook.ejb.examples.shop.UserManager</remote>
            <ejb-class>kr.co.hanbitbook.ejb.examples.shop.UserManagerBean</ejb-class>
            <session-type>Stateless</session-type>
            <transaction-type>Container</transaction-type>
        </session>
        <session>
            <display-name>CategoryManager</display-name>
            <ejb-name>CategoryManager</ejb-name>
            <home>kr.co.hanbitbook.ejb.examples.shop.CategoryManagerHome</home>
            <remote>kr.co.hanbitbook.ejb.examples.shop.CategoryManager</remote>
            <ejb-class>kr.co.hanbitbook.ejb.examples.shop.CategoryManagerBean</ejb-class>
            <session-type>Stateless</session-type>
            <transaction-type>Container</transaction-type>
        </session>
        <entity>
            <display-name>Category</display-name>
            <ejb-name>Category</ejb-name>
            <local-home>kr.co.hanbitbook.ejb.examples.shop.CategoryHome</local-home>
            <local>kr.co.hanbitbook.ejb.examples.shop.Category</local>
            <ejb-class>kr.co.hanbitbook.ejb.examples.shop.CategoryBean</ejb-class>
            <persistence-type>Container</persistence-type>
            <prim-key-class>java.lang.String</prim-key-class>
            <reentrant>False</reentrant>
            <cmp-version>2.x</cmp-version>
            <abstract-schema-name>Category</abstract-schema-name>
            <cmp-field>
                <field-name>name</field-name>
            </cmp-field>
            <cmp-field>
                <field-name>text</field-name>
            </cmp-field>
            <primkey-field>name</primkey-field>
        </entity>
        <entity>
            <display-name>Item</display-name>
            <ejb-name>Item</ejb-name>
            <local-home>kr.co.hanbitbook.ejb.examples.shop.ItemHome</local-home>
            <local>kr.co.hanbitbook.ejb.examples.shop.Item</local>
            <ejb-class>kr.co.hanbitbook.ejb.examples.shop.ItemBean</ejb-class>
            <persistence-type>Container</persistence-type>
            <prim-key-class>java.lang.String</prim-key-class>
            <reentrant>False</reentrant>
            <cmp-version>2.x</cmp-version>
            <abstract-schema-name>Item</abstract-schema-name>
            <cmp-field>
                <field-name>id</field-name>
            </cmp-field>
            <cmp-field>
                <field-name>categoryname</field-name>
            </cmp-field>
            <cmp-field>
                <field-name>name</field-name>
            </cmp-field>
            <cmp-field>
                <field-name>price</field-name>
            </cmp-field>
            <cmp-field>
                <field-name>text</field-name>
            </cmp-field>
            <cmp-field>
                <field-name>regdate</field-name>
            </cmp-field>
            <primkey-field>id</primkey-field>
        </entity>
        <entity>
            <display-name>Users</display-name>
            <ejb-name>Users</ejb-name>
            <local-home>kr.co.hanbitbook.ejb.examples.shop.UsersHome</local-home>
            <local>kr.co.hanbitbook.ejb.examples.shop.Users</local>
            <ejb-class>kr.co.hanbitbook.ejb.examples.shop.UsersBean</ejb-class>
            <persistence-type>Container</persistence-type>
            <prim-key-class>java.lang.String</prim-key-class>
            <reentrant>False</reentrant>
            <cmp-version>2.x</cmp-version>
            <abstract-schema-name>Users</abstract-schema-name>
            <cmp-field>
                <field-name>id</field-name>
            </cmp-field>
            <cmp-field>
                <field-name>name</field-name>
            </cmp-field>
            <cmp-field>
                <field-name>passwd</field-name>
            </cmp-field>
            <cmp-field>
                <field-name>userlevel</field-name>
            </cmp-field>
            <primkey-field>id</primkey-field>
        </entity>
        <entity>
            <display-name>Buylog</display-name>
            <ejb-name>Buylog</ejb-name>
            <local-home>kr.co.hanbitbook.ejb.examples.shop.BuylogHome</local-home>
            <local>kr.co.hanbitbook.ejb.examples.shop.Buylog</local>
            <ejb-class>kr.co.hanbitbook.ejb.examples.shop.BuylogBean</ejb-class>
            <persistence-type>Bean</persistence-type>
            <prim-key-class>java.lang.Integer</prim-key-class>
            <reentrant>False</reentrant>
        </entity>
    </enterprise-beans>
    <assembly-descriptor>
        <container-transaction>
            <method>
                <ejb-name>Category</ejb-name>
                <method-name>*</method-name>
            </method>
            <trans-attribute>Required</trans-attribute>
        </container-transaction>
        <container-transaction>
            <method>
                <ejb-name>Item</ejb-name>
                <method-name>*</method-name>
            </method>
            <trans-attribute>Required</trans-attribute>
        </container-transaction>
        <container-transaction>
            <method>
                <ejb-name>Users</ejb-name>
                <method-name>*</method-name>
            </method>
            <trans-attribute>Required</trans-attribute>
        </container-transaction>
        <container-transaction>
            <method>
                <ejb-name>UserManager</ejb-name>
                <method-name>*</method-name>
            </method>
            <trans-attribute>Required</trans-attribute>
        </container-transaction>
        <container-transaction>
            <method>
                <ejb-name>CategoryManager</ejb-name>
                <method-name>*</method-name>
            </method>
            <trans-attribute>Required</trans-attribute>
        </container-transaction>
        <container-transaction>
            <method>
                <ejb-name>Buylog</ejb-name>
                <method-name>*</method-name>
            </method>
            <trans-attribute>Required</trans-attribute>
        </container-transaction>
    </assembly-descriptor>
</ejb-jar>